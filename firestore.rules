rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own user document
    match /user/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow access to subcollections
      match /{subcollection=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow users to read other users' basic info for activity page
    match /user/{userId} {
      allow read: if request.auth != null;
    }
    
    // Events collection rules
    match /events/{eventId} {
      allow read, write: if request.auth != null;
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
      
      match /participants/{participantId} {
        allow read, write: if request.auth != null;
      }
    }
    
    // Chats collection rules
    match /chats/{chatId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid in resource.data.participants || 
         request.auth.uid in request.resource.data.participants);
    }
    
    // Archive collection rules
    match /user/{userId}/archive/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Gifts sent collection rules
    match /gifts_sent/{giftId} {
      allow read, write: if request.auth != null;
    }
    
    // Event requests collection rules
    match /event_requests/{requestId} {
      allow read, write: if request.auth != null;
    }
  }
}
